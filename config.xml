<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "edu.uab.business.studentapp"
        versionCode = "1"
        version     = "0.0.1" >    <!-- versionCode is optional and Android only -->
        
        <name>Valentina's Mobile App</name>
        <description>
            Mobile App Assignment
        </description>
        <author>
            Valentina M. Kniess
        </author>
        <preference name="phonegap-version" value="cli-6.5.0" />
        <plugin name="cordova-plugin-whitelist" source="npm" />
        <access origin="*" />
        
        <plugin name="cordova-plugin-camera" source="npm" />
        <plugin name="cordova-plugin-contacts" source="npm" />
        
        <plugin name="cordova-plugin-geolocation" spec="~2.4.2" />
        <plugin name="cordova-plugin-splashscreen" />
        <preference name="SplashScreenDelay" value="6000" />
        
        <icon src="icon.png" />
        <splash src="splash.png" />
</widget>